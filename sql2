SELECT
    table_name AS "Table Name",
    pg_size_pretty(pg_total_relation_size(quote_ident(table_name))) AS "Table Size",
    (xpath('//row/text()', query_to_xml(format('SELECT count(*) FROM %I.%I', schemaname, table_name), false, true, '')))[1]::text::int AS "Row Count",
    (SELECT count(*) FROM information_schema.columns WHERE table_schema = schemaname AND table_name = t.table_name) AS "Column Count"
FROM
    pg_stat_user_tables t
WHERE
    table_name LIKE '%floating%'
    OR table_name LIKE '%ljx%'
    OR table_name LIKE '%szjt%'
ORDER BY
    pg_total_relation_size(quote_ident(table_name)) DESC;
